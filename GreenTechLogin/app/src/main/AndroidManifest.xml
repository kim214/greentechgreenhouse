<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- MQTT requires internet access -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- For connectivity state -->

    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GreenTechLogin"
        tools:targetApi="31">

        <!-- ✅ MQTT Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <!-- ✅ SplashActivity (now the launcher screen) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GreenTechLogin.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Welcome screen after splash -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.GreenTechLogin" />

        <!-- ✅ MainActivity for login (supports deep link greentech://login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GreenTechLogin">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="greentech"
                    android:host="login" />
            </intent-filter>
        </activity>

        <!-- ✅ Signup Activity -->
        <activity
            android:name=".SignupActivity"
            android:label="@string/signup_label"
            android:theme="@style/Theme.GreenTechLogin" />

        <!-- ✅ Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:label="@string/dashboard_label"
            android:theme="@style/Theme.GreenTechLogin" />

        <!-- ✅ Password Reset (via Supabase link) -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="czihzgyafnlshmubljch.supabase.co"
                    android:pathPrefix="/reset-password" />
            </intent-filter>
        </activity>

        <!-- ✅ LocalBroadcastManager Receiver -->
        <receiver
            android:name="android.support.v4.content.LocalBroadcastManager$Receiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
