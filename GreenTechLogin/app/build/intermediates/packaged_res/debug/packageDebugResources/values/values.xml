<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="Teal_700">#FF018786</color>
    <color name="accent">#FFC107</color>
    <color name="black">#FF000000</color>
    <color name="dark_green">#388E3C</color>
    <color name="green">#4CAF50</color>
    <color name="light_gray">#4CAF50</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_700">#388E3C</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">GreenTech</string>
    <string name="dashboard_label">dashboard_label</string>
    <string name="signup_label">Sign up</string>
    <style name="DashboardData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="SecondaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="TabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@drawable/tab_button_background</item>
    </style>
    <style name="Theme.GreenTechLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="Theme.GreenTechLogin.Splash" parent="Theme.SplashScreen">
        
        <item name="windowSplashScreenBackground">@color/green</item>

        
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        
        <item name="windowSplashScreenAnimationDuration">800</item>

        
        <item name="postSplashScreenTheme">@style/Theme.GreenTechLogin</item>
    </style>
</resources>